@model IEnumerable<Business_layer.ViewModel.categoryViewModelcs>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("NewCategory", "NewCategory")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryImage)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryImage)
            </td>
            <td>
                @Html.ActionLink("NewCategory", "NewCategory", new { id = item.CategoryId }, null) |
                @Html.ActionLink("updateCategory", "updateCategory", new { id = item.CategoryId }, null) |
                @Html.ActionLink("DeleteCategory", "DeleteCategory", new { id = item.CategoryId }, null)
            </td>
        </tr>
    }

</table>

